{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "labels": {
            "app1": "ic"
        },
        "name": "iperf-client"
    },
    "spec": {
        "containers": [
            {
                "command": [
                    "/usr/bin/iperf3",
                    "-M",
                    "1454",
                    "-c",
                    "$(target_ip)",
                    "-P",
                    "8",
                    "-i",
                    "5",
                    "-t",
                    "86000"
                ],
                "env": [
                    {
                        "name": "target_ip",
                        "value": "i-srvr"
                    }
                ],
                "image": "networkstatic/iperf3:latest",
                "imagePullPolicy": "Always",
                "name": "iperf3-client",
		"resources": {
                    "requests": {
                        "cpu": "300m",
                        "memory": "1Gi"
                    }
                }
            }
        ],
        "restartPolicy": "OnFailure"
    }
}

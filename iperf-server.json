{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "labels": {
            "app": "iperf3"
        },
        "name": "i-srvr"
    },
    "spec": {
        "containers": [
            {
                "command": [
                    "/usr/bin/iperf3",
                    "-s",
                    "-i",
                    "20"
                ],
                "image": "networkstatic/iperf3:latest",
                "imagePullPolicy": "Always",
                "name": "i-srvr",
		"resources": {
                    "requests": {
                        "cpu": "300m",
                        "memory": "1Gi"
                    }
                }
            }
        ],
        "restartPolicy": "OnFailure"
    }
}
